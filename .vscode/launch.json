    "version": "0.2.0",
    "configurations": [
    {
        "type": "lldb",
        "request": "launch",
        "name": "Cargo launch",
        "cargo": {
            "args": [
                "build",
            ]
        },
        "program": "${cargo:program}",
        "args": [ "-p 104" ]
    },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'winplat'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=winplat"
                ],
                "filter": {
                    "name": "winplat",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}